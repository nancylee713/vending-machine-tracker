<h1><%= @machine.location %> Vending Machine</h1>

<% @machine.snacks.each do |snack| %>
  <section id="snack-id-<%= snack.id %>">
    <li><%= snack.name %>: <%= snack.price %></li>
  </section>
<% end %>

<h3>Average Price for Snacks: <%= number_to_currency(@machine.snacks.average_price.round(2)) %></h3>
